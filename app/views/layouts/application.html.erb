<!DOCTYPE html>
<html>
<head>
  <title>Blocipedia</title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
</head>
<body class="pt-10">
  
  <div class="container">
    <nav class="navbar navbar-static-top">
    <ul class="nav nav-tabs">
     <li><%= link_to "Home", root_path %></li>
     <li><%= link_to "About", about_path %></li>
     
     
    
    <% if user_signed_in? %>
      <li class="pull-right"><br>Signed in as: <small><strong><%= current_user.email %></strong></small></li>
      <li class="nav nav-tabs"><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %></li>
      <li class="nav nav-tabs"><%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
      <li><%= link_to "Upgrade", new_charge_path %></li>
      
    <% else %>
      <li><%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %></li>
      <li><%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %></li>
    </ul>   
  <% end %>
  
    <% if flash[:alert] %>
       <div class="alert alert-warning alert-dismissible" role="alert">
         <%= flash[:alert] %>
       </div>
       <br>
    <% elsif flash[:notice] %>
        <div class="alert alert-success" role="alert">
          <%= flash[:notice] %>
        </div>   
   
    <% end %>
   
<%= yield %>

 </div>
</body>
</html>


